@model Sistema_de_Empregados.Models.Employee



<h1>Adicionar novo funcionário</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Sector" class="control-label"></label>
                <input asp-for="Sector" class="form-control" />
                <span asp-validation-for="Sector" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label>
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="FoodVoucher" class="control-label"></label>
                <input asp-for="FoodVoucher" class="form-control" />
                <span asp-validation-for="FoodVoucher" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TransportationVoucher" class="control-label"></label>
                <input asp-for="TransportationVoucher" class="form-control" />
                <span asp-validation-for="TransportationVoucher" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" id="hehe"/>
                <a asp-action="Index"><input type="button" value="Voltar" id="hehe" /></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    #hehe{
    -webkit-transition-duration: 0.4s; /* Safari */
    transition-duration: 0.4s;
    border-radius: 10px 10px;
    width: 130px;
}

    #hehe:hover {
    background-color: #4CAF50; /* Green */
    color: white;}
</style>